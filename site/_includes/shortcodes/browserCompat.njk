<div class="browser-compat">
  <span class="browser-compat__label">{{- browserCompat.supportLabel -}}</span>
  <span class="browser-compat__items">
    {% if browserCompat.browsers and browserCompat.browsers.length -%}
    {% for browser in browserCompat.browsers -%}
    <span class="browser-compat__icon" data-browser="{{- browser.name -}}">
      <span class="visually-hidden">{{ browser.ariaLabel }}</span>
    </span>
    <span class="browser-compat__version" data-compat="{{ browser.supportInfo.compatProperty }}">
      {{- browser.icon -}}
    </span>
    {%- endfor %}
    {%- endif %}
  </span>
  {% if browserCompat.source -%}
  <a class="browser-compat__link" href="{{ browserCompat.source }}#browser_compatibility" target="_blank">
    {{- browserCompat.sourceLabel -}}
  </a>
  {%- endif %}
</div>